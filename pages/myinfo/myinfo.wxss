/* pages/myinfo/myinfo.wxss */

/*整个容器的样式*/

.view-whole-container {
}

/*用户信息的容器样式*/

.view-container-user {
  margin-top: 30rpx;
  margin-left: 26rpx;
  margin-bottom: 35rpx;
  height: 100rpx;
}

/*用户name的样式*/

.text-username {
  display: inline-block;
  width: 100%;
  color: #2d2d2d;
  font-size: 34rpx;
  font-weight: 600;
}

/*头像img的样式*/

.image-headimg {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: absolute;
  right: 26rpx;
  top: 30rpx;
}

.container-login-id {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

/*用户id的样式*/

.text-userid {
  display: inline-block;
  color: #2d2d2d;
  font-size: 22rpx;
}

/*登录*/

.btn-login {
  border: none;
  outline: none;
  padding: 0 20rpx;
  width: 112rpx;
  height: 50rpx;
  display: inline-block;
  color: white;
  background: linear-gradient(to right, #ff7698, #fd4f66);
  font-size: 30rpx;
  margin-left: 18rpx;
  border-radius: 25rpx;
  text-align: center;
  position: unset;
  line-height: 50rpx;
}

.btn-login:after {
  border: none;
}

/*未登录之前的btn盖在我的赞，收藏，评论之上*/

.btn-zan-collection-comments {
  border: none;
  outline: none;
  padding: 0 20rpx;
  height: 110rpx;
  width: 100%;
  display: inline-block;
  background: transparent;
  position: absolute;
  left: 0;
}

.btn-zan-collection-comments:after {
  border: none;
}

/*收藏容器*/

.container-collection {
  width: 100%;
  height: 110rpx;
  position: relative;
  display: flex;
  flex-direction: row;
}

/*收藏的图标*/

.image-collection {
  height: 40rpx;
  width: 40rpx;
  margin-top: 35rpx;
  margin-left: 26rpx;
}

/*我的收藏文字*/

.text-collection {
  font-size: 32rpx;
  color: #2d2d2d;
  margin-left: 12rpx;
  margin-top: 40rpx;
  letter-spacing: 2rpx;
  line-height: 32rpx;
}

/*我的收藏数量*/

.text-collection-count {
  font-size: 30rpx;
  color: #979797;
  margin-left: 12rpx;
  margin-top: 40rpx;
  line-height: 30rpx;
}

/*箭头*/

.image-arrow {
  height: 28rpx;
  width: 16rpx;
  position: absolute;
  right: 26rpx;
  top: 41rpx;
}

/* 小红包的样式*/

.image-xhb {
  height: 26rpx;
  width: 22rpx;
  position: absolute;
  right: 62rpx;
  top: 42rpx;
}

/*分割线*/

.view-fengexian {
  height: 1px;
  background: #f3f3f3;
  width: 100%;
}
